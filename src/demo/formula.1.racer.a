!cpu 6502
!to "build/DEMO/FORMULA.1.RACER#060300",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title
         lda   #$60
         sta   $818
         jsr   $800

         ldx   #$10       ; keypress
         stx   $6DEC
         inx
         stx   $6DED
         lda   #$4C
         sta   $6DEE
         sta   $72AE
         ldx   #0         ; set exits
         stx   $6DEF
         stx   $6EBE
         stx   $72AF
         inx
         stx   $6DF0
         stx   $6EBF
         stx   $72B0
         lda   #$2C       ; reset vector patch
         sta   $71D0
         stx   $71D5
         sta   $71DA
         lda   #$D0       ; kill sound
         sta   $7307
         sta   $733F
         sta   $7356

         +DISABLE_ACCEL
         jmp   $7000

title    !byte x_e-x_b
x_b      !text "FORMULA.1.RACER"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
